//Concatenating strings with plus equals operator
var str1="Hello Everyone. ";
str1+="Welcome to my Javascript project";
 console.log(str1);
//Constructing Strings with variables
var str2= "Dinosaur.";
var str3="Huge";
var string="I am a "+str2+" I am "+str3+" and cute.";
console.log(string);
//appending variables to strings
var sen1="Tall";
var sen2=" People are goood looking";
sen1+=sen2;
console.log(sen1);
//finding the length of a string
var myStringLength=0;
var myString="TuneInForLove";
myStringLength=myString.length;
console.log("String length = ",myStringLength);
//Finding first character in a string
var myString1="Zebra";
var FirstLetterOfmyString1=myString[0];
console.log("The first character is:",FirstLetterOfmyString1);
